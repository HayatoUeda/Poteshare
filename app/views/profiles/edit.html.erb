<div class="container">
  <h2>プロフィール編集</h2>
  <%= form_with model: @profile, local: true do |f| %>
    <div style="margin-top: 30px;">
      <%= f.attachment_field :image %><br/>
    </div>
    <div class="form_group">
      <%= f.label :名前 %><br/>
      <%= f.text_field :name %>
    </div>
    <div class="form_group">
      <%= f.label :プロフィール紹介 %><br/>
      <%= f.text_area :introduction %>
    </div>
    <div class="submit_block">
      <%= f.submit class: "button" %>
    </div>
  <% end %>
  <div class="link">
    <%= link_to "戻る", :back %>
  </div>
</div>
